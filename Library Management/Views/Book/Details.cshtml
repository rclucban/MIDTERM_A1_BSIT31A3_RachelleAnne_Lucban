@model Library_Management.Models.BookListViewModel

<div class="modal-header bg-primary text-white">
    <h5 class="modal-title">@Model.Title</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    <div class="row g-4">
        <!-- Cover Image -->
        <div class="col-md-4 text-center">
            <img src="@Model.CoverImageUrl"
                 class="img-fluid rounded shadow-sm"
                 alt="@Model.Title"
                 style="max-height: 300px; object-fit: cover;">
        </div>

        <!-- Details -->
        <div class="col-md-8">
            <dl class="row mb-0">
                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.ISBN)</dt>
                <dd class="col-sm-8">@Model.ISBN</dd>

                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.AuthorName)</dt>
                <dd class="col-sm-8 d-flex align-items-center">
                    @Model.AuthorName
                    @if (!string.IsNullOrEmpty(Model.AuthorProfileImageUrl))
                    {
                        <img src="@Model.AuthorProfileImageUrl"
                             class="rounded-circle ms-2"
                             style="width: 30px; height: 30px; object-fit: cover;"
                             alt="Author Profile">
                    }
                </dd>

                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.Genre)</dt>
                <dd class="col-sm-8">@Model.Genre</dd>

                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.PublishedDate)</dt>
                <dd class="col-sm-8">@Model.PublishedDate?.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-4 fw-semibold">Available Copies</dt>
                <dd class="col-sm-8">@Model.AvailableCopies / @Model.TotalCopies</dd>
            </dl>

            <hr />

            <h6 class="fw-semibold">@Html.DisplayNameFor(m => m.Description)</h6>
            <p class="mb-0">@Model.Description</p>
        </div>
    </div>
</div>

<div class="modal-footer">
    <a asp-action="Index" asp-route-id="@Model.BookId" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left"></i> Close
    </a>
    <button type="button" class="btn btn-success" onclick="openAddBookCopyModal('@Model.BookId')">
        <i class="bi bi-plus-circle"></i> Add Copy
    </button>
    <a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-primary">
        <i class="bi bi-pencil-square"></i> Edit Book
    </a>
</div>

<!-- Add Book Copy Modal -->
<div class="modal fade" id="addBookCopyModal" tabindex="-1" aria-labelledby="addBookCopyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="addBookCopyModalContent">
            <!-- Modal content will be loaded here -->
        </div>
    </div>
</div>

<script>
function openAddBookCopyModal(bookId) {
    fetch(`/Book/AddBookCopyModal/${bookId}`)
        .then(response => response.text())
        .then(html => {
            document.getElementById('addBookCopyModalContent').innerHTML = html;
            const modal = new bootstrap.Modal(document.getElementById('addBookCopyModal'));
            modal.show();
        })
        .catch(error => {
            console.error('Error loading modal:', error);
            alert('Error loading the add copy form. Please try again.');
        });
}
</script>
